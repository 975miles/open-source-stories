extends ./lay

block head
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawingboard.js/0.4.6/drawingboard.css")

block js
    script(src="https://cdnjs.cloudflare.com/ajax/libs/drawingboard.js/0.4.6/drawingboard.min.js")
    script(src="/js/contribute.js")

block title
    | Contributing

block content
    p
        i You're making a contribution to a book called...
    
    h1 Da Gators invade!!!

    hr
    p (...44 unseen pages are here)
    hr
    
    div.jumbotron.border.border-dark
        p.text-muted Page 45
        p.lead then da gators killed jim
    hr
    
    div.jumbotron.border.border-dark#contribution
        p.text-muted Page 46 (Your page)
        br
        ul.nav
            li.nav-item
                button.btn.btn-secondary.nav-link#textType(onclick="changeType('text')") Text
            li.nav-item
                button.btn.btn-secondary.nav-link#drawingType(onclick="changeType('drawing')") Drawing
        div#textContribution
            input(type="text" class="form-control" id="textContribution" placeholder="Enter the next part of the story...")
        div#drawingContribution
            div#paper
        br
        button.btn.btn-lg.btn-danger Submit contribution
    
    hr
    p (...54 more pages to come)